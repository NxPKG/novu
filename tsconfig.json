{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "ESNext",
    "module": "CommonJS",
    "strict": false,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "types": [
    "node",
    "mocha",
    "chai",
    "sinon",
    "cypress",
    "jest"
  ]
}
